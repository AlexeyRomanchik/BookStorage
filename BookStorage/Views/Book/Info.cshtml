@model BookStorage.Models.Book
@{
    ViewData["Title"] = "Info";
}

<table class="table table-hover">
    <tbody>
    <tr>
        <td>
            <div class="card float-left m-1" style="width: 20rem;">
                <img class="card-img-top" src="@Model.ImageLink" alt="Book image">
            </div>
        </td>
        <td></td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <td>Publication date</td>
        <td>@Model.GetPublicationDateByFormat()</td>
    </tr>
    <tr>
        <td>Publishing house</td>
        <td>@Model.PublishingHouse?.Name</td>
    </tr>
    <tr>
        <td>Rating</td>
        <td>@Model.Rating</td>
    </tr>
    <tr>
        <td>Authors</td>
        <td>
            @foreach (var author in Model.BookAuthors)
            {
                <p>
                    <a asp-controller="Author" asp-action="Info" asp-route-id="@author.AuthorId">
                         @author.Author.Name @author.Author.Surname
                    </a>
                </p>
            }
        </td>
    </tr>
    </tbody>
</table>